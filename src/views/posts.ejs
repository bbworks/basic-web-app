<html>
  <head>
    <%- include ("partials/head", {
      meta: {
        title: "App | Posts",
        description: "This is my app.",
        cssSheetName: "posts"
      },
    }) %>
  </head>
  <body>
    <%- include ("partials/header") %>
    <main id="content" class="content">
      <section id="post-<%- post.post_id %>" class="post-section">
      	<div class="post-header">
          <span class="post-heading"><%- post.heading %></span
        	><div class="post-author-container">
        		<img class="post-author-photo" src="<%- post.user_photo_url %>" /
        		><a class="post-author-name" href="/users/<%- post.author_id %>"><%- post.first_name+' '+post.last_name %></a>
        	</div
        	><span class="post-date"><%- post.post_date %></span>
        </div>
        <img class="post-image" src="<%- post.post_photo_url %>" /
      	><p class="post-body"><%- post.body %></p>
      </section>
    </main>
    <%- include ("partials/footer") %>
  </body>
  <script src="/js/currentPage.js"></script>
</html>
