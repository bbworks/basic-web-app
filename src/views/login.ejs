<html>
  <head>
    <meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="Login screen.">
    <link type="image/ico" rel="icon" href="/assets/logo.png">
    <title>App</title>

    <!-- FONT AWESOME -->
    <!-- NOTE: Import Font Awesome first, so we can override the formating of their icons -->
    <script src="https://kit.fontawesome.com/4849833081.js" crossorigin="anonymous"></script>

    <!-- STYLESHEETS -->
    <link type="text/css" rel="stylesheet" href="/css/main.css">
    <link type="text/css" rel="stylesheet" href="/css/header.css">
    <link type="text/css" rel="stylesheet" href="/css/footer.css">
    <link type="text/css" rel="stylesheet" href="/css/login.css">
  </head>
  <body>
    <%- include ("partials/header") %>
    <main class="content">
      <form class="login-form" action="/login" method="POST">
        <div class="login-form-header">
          <h3 class="login-form-heading">Log In</h3>
          <% console.log(failure) %>
          <p class="login-form-error <% if (failure) {%>failure<% } %>">The username or password is incorrect.</p>
        </div>
        <label for="username" class="login-form-component login-form-label">Username</label>
        <input id="login-form-username" class="login-form-component login-form-input" type="text" name="username" tabindex="1" required>
        <label for="password" class="login-form-component login-form-label">Password</label>
        <input id="login-form-password" class="login-form-component login-form-input" type="password" name="password" tabindex="2" required>
        <button class="login-form-component login-form-submit" type="submit" tabindex="3">Log In</button>
        <div class="login-form-loading-container">
          <i class="login-form-loading-circle fas fa-spinner"></i>
        </div>
      </form>
    </main>
    <%- include ("partials/footer") %>
  </body>
  <script src="/js/currentPage.js"></script>
</html>
