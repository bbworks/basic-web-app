            <section id="post-<%- post.post_id %>" class="user-post">
              <span class="user-post-heading"><%- post.heading %></span
              ><img class="user-post-image" src="<%- post.post_photo_url %>" /
              ><div class="user-post-author-container">
                <img class="user-post-author-photo" src="<%- user.user_photo_url %>" /
                ><span class="user-post-author-name"><%- user.first_name+' '+user.last_name %></span>
              </div
              ><span class="user-post-date"><%- post.post_date %></span
              ><p class="user-post-body"><%- post.body %></p
              ><a class="user-post-continue-reading-button" href="/posts/<%- post.post_id %>">Continue Reading</a>
            </section>
